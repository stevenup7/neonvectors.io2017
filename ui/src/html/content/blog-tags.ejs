<div class="container">

  <h1 class="title">Blog Grouped By Tag</h1>

  <section class="tag-list">

    <% tagList.forEach( function(tag) { %>
      <h4 class="<%- tag.current ? 'active': '' %> tag-list-title subtitle is-5"><%- tag.tag %></h4>
      <ul>
      <% tag.posts.forEach( function(post) { %>
      <li><a href="../<%- post.fileName %>"><%- post.fileName %> : <%- post.title %></a></li>
      <% }) %>
      </ul>
    <% }) %>

  </section>
</div>
